<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    >



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="300dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:text="Account: "
            android:id="@+id/login_user_input"
            android:textColor="@color/orange1"
            android:textSize="20sp"
            />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColorHighlight="@color/orange2"
            android:hint="Enter your username"
            android:textColorHint="@color/orange4"
            android:layout_below="@+id/login_user_input"
            android:singleLine="true"
            android:inputType="text"
            android:textColor="@color/orange3"

            />

        <TextView
            android:id="@+id/login_passwd_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_marginTop="3dp"
            android:text="Password: "
            android:textColor="@color/orange1"
            android:textSize="20sp"/>


        <android.support.design.widget.TextInputEditText
            android:id="@+id/passwd_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_passwd_input"
            android:password="true"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textColor="@color/orange3"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_button"
            android:layout_below="@id/passwd_edit"
            android:layout_alignRight="@id/passwd_edit"
            android:text="Log in"
            android:textColor="@color/bg_app"
            android:onClick="enter"
            android:background="@drawable/button_style"/>

    </RelativeLayout>


</LinearLayout>