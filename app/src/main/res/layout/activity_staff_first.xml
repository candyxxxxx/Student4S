<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background">

    <include layout="@layout/toolbar"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="300dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:text="Account: "
            android:id="@+id/staff_input"
            android:textColor="@color/orange1"
            android:textSize="20sp"
            />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/stdname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColorHighlight="@color/orange2"
            android:hint="Enter Student ID"
            android:textColorHint="@color/orange4"
            android:layout_below="@+id/staff_input"
            android:singleLine="true"
            android:inputType="text"
            android:textColor="@color/orange3"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/staff_search"
            android:layout_below="@id/stdname"
            android:layout_alignRight="@id/stdname"
            android:text="Search"
            android:textColor="@color/bg_app"
            android:onClick="search"
            android:background="@drawable/button_style"/>

    </RelativeLayout>

</LinearLayout>