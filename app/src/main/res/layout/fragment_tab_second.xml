<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pie_chart"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:orientation="horizontal">
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/bar_chart"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_margin="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="20sp"
                android:text="Score: "
                android:textColor="@color/colorPrimary"/>

            <TextView android:id="@+id/study"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="15sp"
                android:textColor="@color/orange1"/>

            <TextView android:id="@+id/sports"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="15sp"
                android:textColor="@color/orange2"/>

            <TextView android:id="@+id/sleep"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="15sp"
                android:textColor="@color/orange3"/>

            <TextView android:id="@+id/social"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="15sp"
                android:textColor="@color/orange4"/>
        </LinearLayout>
    </LinearLayout>
    
    <Button android:id="@+id/show_pie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:layout_gravity="bottom"
        android:layout_margin="10dp"
        android:text="SHOW DATA"
        android:textColor="@color/bg_app"/>

</LinearLayout>